<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: Black; -fx-border-color: White;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eclipsado.controller.FirstStageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="InstructionText" alignment="CENTER" prefHeight="17.0" prefWidth="250.0" style="-fx-text-fill: White;" text="Ingresa la palabra secreta">
      <font>
         <Font name="Georgia" size="20.0" />
      </font></Label>
   <TextField fx:id="SecretWord" alignment="CENTER" prefHeight="45.0" prefWidth="240.0" style="-fx-background-color: Black; -fx-text-fill: White; -fx-border-color: White;">
      <font>
         <Font name="Georgia" size="20.0" />
      </font>
   </TextField>
    <Button fx:id="PlayButton" alignment="CENTER" onAction="#OnPlayButtonClick" prefHeight="60.0" prefWidth="120.0" style="-fx-background-color: Black; -fx-text-fill: White; -fx-border-color: White;" text="Jugar">
      <font>
         <Font name="Georgia" size="20.0" />
      </font>
    </Button>
</VBox>
